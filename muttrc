set realname = "Eugen Minciu"
set from = "eugen@lesseverything.com"
set hostname=lesseverything.com
set hidden_host
set envelope_from
set alias_file=~/.mutt/aliases
set sort=threads
set sort_aux=date-received
set meta_key=yes
set fast_reply
set editor="vim" 
set pager_context=3


set folder=~/Mail
set spoolfile=~/Mail/inbox
set mbox=+mbox
set record=+sent
set postponed=+postponed

set copy=yes        # save a copy of any message you send.
set delete=yes      # delete messages marked for deletion when you exit.
set include=yes     # include a copy of the original message when replying.
set move=yes        # move read messages to the mbox file
set postpone=yes    # postpone any message you choose not to send when you exit the editor. 
set recall=yes      # bring up your postponed messages when sending a new message

source ~/.mutt/colors
source ~/.mutt/smtp
source ~/.mutt/sidebar
